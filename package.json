{
	"name": "azure-pipelines-yaml-task-validator",
	"displayName": "Azure Pipelines YAML Task validator",
	"description": "A Visual Studio code extension that analyzes Azure Pipelines YAML files and validates task requirements and conditions.",
	"publisher": "julianportelli",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.96.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/julianportelli/yaml-devops-validation"
	},
	"categories": [
		"Linters"
	],
	"keywords": [
		"yaml",
		"devops",
		"azure",
		"pipelines",
		"tasks"
	],
	"activationEvents": [
		"onLanguage:yaml"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "yaml",
				"extensions": [
					".yml",
					".yaml"
				]
			}
		]
	},
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"copy-fixtures": "ts-node src/scripts/copyTestFixtures.ts",
		"compile-tests": "tsc -p . --outDir out && pnpm run copy-fixtures",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"test": "vscode-test --coverage true --color true --coverage-output ./out/coverage",
		"test2": "node ./out/test/runTest.js",
		"package-extension": "pnpm run compile && vsce package --no-dependencies",
		"publish-extension": "vsce publish --no-dependencies"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.10.2",
		"@types/vscode": "^1.96.0",
		"@typescript-eslint/eslint-plugin": "^8.18.1",
		"@typescript-eslint/parser": "^8.18.1",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"esbuild": "^0.25.0",
		"eslint": "^9.26.0",
		"glob": "^11.1.0",
		"jest": "^30.2.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.5.3",
		"ts-jest": "^29.4.6",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.2"
	},
	"dependencies": {
		"mocha": "^11.1.0",
		"yaml": "^2.6.1"
	}
}