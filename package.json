{
	"name": "azure-pipelines-yaml-task-validator",
	"displayName": "Azure DevOps Pipelines Validator",
	"description": "A Visual Studio Code extension that analyzes Azure DevOps Pipelines YAML files and validates task requirements and conditions.",
	"publisher": "julianportelli",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.109.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/julianportelli/yaml-devops-validation"
	},
	"categories": [
		"Linters"
	],
	"keywords": [
		"yaml",
		"devops",
		"azure",
		"pipelines",
		"tasks"
	],
	"activationEvents": [
		"onLanguage:yaml"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "yaml",
				"extensions": [
					".yml",
					".yaml"
				]
			}
		]
	},
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"copy-fixtures": "ts-node src/scripts/copyTestFixtures.ts",
		"compile-tests": "tsc -p . --outDir out && pnpm run copy-fixtures",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"test": "vscode-test --coverage true --color true --coverage-output ./out/coverage",
		"test2": "node ./out/test/runTest.js",
		"package-extension": "pnpm run compile && vsce package --no-dependencies",
		"publish-extension": "vsce publish --no-dependencies"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "^25.2.3",
		"@types/vscode": "^1.109.0",
		"@typescript-eslint/eslint-plugin": "^8.55.0",
		"@typescript-eslint/parser": "^8.55.0",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2",
		"esbuild": "^0.27.3",
		"eslint": "^10.0.0",
		"glob": "^13.0.2",
		"jest": "^30.2.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.8.1",
		"ts-jest": "^29.4.6",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"mocha": "^11.7.5",
		"yaml": "^2.8.2"
	}
}